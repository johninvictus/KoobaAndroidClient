<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.RoundedButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_button_drawable</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_activity_bg</item>
    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_background_color">@color/ak_background</item>
        <item name="com_accountkit_text_color">@color/ak_text</item>
        <item name="com_accountkit_button_background_color">@color/ak_buttonBackground</item>
        <item name="com_accountkit_button_pressed_background_color">@color/ak_buttonPressedBackground</item>
        <item name="com_accountkit_button_text_color">@color/ak_buttonText</item>
        <item name="com_accountkit_input_background_color">@color/ak_inputBackground</item>
        <item name="com_accountkit_input_text_color">@color/ak_inputText</item>
        <item name="com_accountkit_status_bar_color">@color/ak_statusBar</item>
        <item name="com_accountkit_icon_color">@color/ak_icon</item>
    </style>

    <dimen name="toolbar_elevation">4dp</dimen>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
